<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15sp"
    >


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:background="?attr/colorPrimaryInverse"
        android:scaleType="centerCrop"
        android:maxLines="3"
        android:stateListAnimator="@animator/selection_animator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/AppTheme.ImageRoundedCorners"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textBookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/smallSpacing"
        android:layout_marginEnd="@dimen/defaultSpacing"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/image"
        android:paddingLeft="15sp"
        tools:text="Title:" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textBookAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/smallSpacing"
        android:layout_marginEnd="@dimen/defaultSpacing"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        app:layout_constraintTop_toBottomOf="@id/textBookTitle"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintBottom_toTopOf="@id/textBookYear"
        android:paddingLeft="15sp"
        tools:text="Author:" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textBookYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/smallSpacing"
        android:layout_marginEnd="@dimen/defaultSpacing"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintBottom_toBottomOf="@id/image"
        android:paddingLeft="15sp"
        tools:text="Publication Year:" />


</androidx.constraintlayout.widget.ConstraintLayout>
