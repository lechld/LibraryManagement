<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.ImageRoundedCorners" parent="AppTheme">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="AppTheme.SearchView" parent="AppTheme">
        <item name="android:background">@drawable/background_search_view</item>
        <item name="iconifiedByDefault">false</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="queryHint">@string/search_hint</item>
    </style>

    <style name="AppTheme.Dialog.Fullscreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>